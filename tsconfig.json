{
  "compilerOptions": {
    // Default
    "target": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    // Added
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "build",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./build", "./types"]
}
